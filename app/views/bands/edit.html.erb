<h1>Edit <%= @band.name %></h1>

<form action="<%= band_url %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <%= auth_token %>
  <%= render "shared/errors" if flash[:errors] %>

  <br>
  <label for="name">Name</label>
  <input type="text" name="bands[name]" id="name" value="<%= @band.name %>">
  <br>

  <input type="submit" value="edit band">
</form>

<br>
<%= link_to "back", :back %>
